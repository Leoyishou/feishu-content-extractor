{
  "manifest_version": 3,
  "name": "飞书内容提取器",
  "version": "1.0",
  "description": "提取网页内容的学习工具",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}